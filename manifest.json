{
  "name": "WebGPU API Monitor",
  "version": "0.0.1",
  "manifest_version": 3,
  "author": "sy",
  "description": "Monitor WebGPU API calls",
  "icons": {
    "48": "images/icon48.jpg",
    "128": "images/icon128.jpg"
  },
  "permissions": ["scripting", "activeTab", "nativeMessaging", "webNavigation"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "images/icon48.jpg",
    "default_title": "Inject WebGPU API Hooks"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/contentScript.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    }
  ]
}
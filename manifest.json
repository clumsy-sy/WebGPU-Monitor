{
  "name": "WebGPU API Monitor",
  "version": "0.0.1",
  "manifest_version": 3,
  "author": "sy",
  "description": "Monitor WebGPU API calls",
  "icons": {
    "16": "src/icons/icon-16.png",
    "32": "src/icons/icon-32.png",
    "48": "src/icons/icon-48.png",
    "128": "src/icons/icon-128.png"
  },
  "permissions": ["scripting", "activeTab", "tabs"],
  "devtools_page": "src/devtools/devtools.html",
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Inject WebGPU API Hooks"
  },
  "web_accessible_resources": [{
    "resources": ["modules/*.js"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content_script_main.bundle.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScripts/content_script_siolated.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "ISOLATED"
    }
  ]
}